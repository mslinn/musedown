  "version": "0.2.0",
  "configurations": [
    {
      "args": ["hello"],
      "debugPort": "0",
      "name": "Debug musedown",
      "request": "launch",
      "script": "${workspaceRoot}/lib/musedown.rb",
      "type": "rdbg",
    },
    {
      "args": ["-h"],
      "debugPort": "0",
      "name": "Show musedown help",
      "request": "launch",
      "script": "${workspaceRoot}/lib/musedown.rb",
      "type": "rdbg",
    },
    {
      "name": "Attach rdebug-ide",
      "request": "attach",
      "type": "ruby_lsp",
    },
    {
      "name": "RSpec - active spec file only",
      "program": "${workspaceFolder}/binstub/rspec -I ${workspaceFolder} ${file}",
      "request": "launch",
      "type": "ruby_lsp",
    },
    {
      "name": "RSpec - all",
      "program": "${workspaceFolder}/binstub/rspec -I ${workspaceFolder}",
      "request": "launch",
      "type": "ruby_lsp",
    }
  ]
}
